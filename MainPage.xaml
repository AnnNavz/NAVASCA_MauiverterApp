<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NAVASCA_MauiverterApp.MainPage"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <Grid>

            <Image Source="background.png"
                   VerticalOptions="Start"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                </Grid.GestureRecognizers>
                
                <VerticalStackLayout Grid.Column="0" Grid.ColumnSpan="3" HorizontalOptions="Center">
                    <Label Text="Designed by NAVASCA"
                           FontSize="11"
                           FontFamily="lexend"
                           TextColor="White"
                           HorizontalTextAlignment="Center"
                           Margin="0,20,0,0"/>

                    <Label Text="MAUI Converter"
                           FontSize="32"
                           FontFamily="lexend"
                           FontAttributes="Bold"
                           TextColor="White"
                           Margin="0,10,0,0"
                           HorizontalTextAlignment="Center"/>

                </VerticalStackLayout>

                <ImageButton Grid.Row="1"
                             x:Name="information"
                             Source="information.png"
                             Margin="0,100,0,0"/>

                <ImageButton Grid.Row="1"
                             Grid.Column="1"
                             x:Name="volume"
                             Source="volume.png"
                             Margin="0,100,0,0"/>

                <ImageButton Grid.Row="1"
                             Grid.Column="2"
                             x:Name="length"
                             Source="length.png"
                             Margin="0,100,0,0"/>

                <ImageButton Grid.Row="2"
                             x:Name="mass"
                             Source="mass.png"/>

                <ImageButton Grid.Row="2"
                             Grid.Column="1"
                             x:Name="temperature"
                             Source="temperature.png"/>

                <ImageButton Grid.Row="2"
                             Grid.Column="2"
                             x:Name="energy"
                             Source="energy.png"/>

                <ImageButton Grid.Row="3"
                             x:Name="area"
                             Source="area.png"/>

                <ImageButton Grid.Row="3"
                             Grid.Column="1"
                             x:Name="speed"
                             Source="speed.png"/>

                <ImageButton Grid.Row="3"
                             Grid.Column="2"
                             x:Name="duration"
                             Source="duration.png"/>
                
                

            </Grid>
        </Grid>
    </ScrollView>

</ContentPage>
