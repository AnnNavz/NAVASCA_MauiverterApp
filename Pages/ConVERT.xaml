<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NAVASCA_MauiverterApp.Pages.ConVERT"
             Shell.NavBarIsVisible="False">



    <Grid>
        <Image Source="bg1.png"
               Aspect="AspectFill"/>
        <VerticalStackLayout HorizontalOptions="Center">
            <Label Text="{Binding QuantityName}"
                   TextColor="#ff97b6"
                    FontSize="42"
                    FontAttributes="Bold"
                    FontFamily="lexend"
                    Margin="0,30,0,0"
                    HorizontalTextAlignment="Center"/>

            <Label Text="Choose on what to change!"
                   TextColor="White"
                   FontSize="13"
                   FontFamily="century gothic"
                   HorizontalTextAlignment="Center"/>

            <Entry Text="{Binding FromValue}"
                   ReturnCommand="{Binding ReturnCommand}"
                   Keyboard="Numeric"
                   TextColor="White"
                   FontSize="72"
                   FontFamily="century gothic"
                   Margin="0,100,0,0"
                   HorizontalTextAlignment="Center"/>

            <Picker
                   TextColor="White"
                   TitleColor="White"
                   BackgroundColor="#40FFFFFF"
                   WidthRequest="320"
                   Margin="0, 10, 0, 0"
                   HorizontalOptions="Center"
                   ItemsSource="{Binding FromMeasures}"
                   SelectedItem="{Binding CurrentFromMeasure}"
                   SelectedIndexChanged="Picker_SelectedIndexChanged"/>

            <Border BackgroundColor="#ff97b6" WidthRequest="345" MinimumHeightRequest="300" Margin="0,30,0,0" Stroke="AntiqueWhite" StrokeThickness="3">

                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15"/>
                </Border.StrokeShape>
                
                <VerticalStackLayout HorizontalOptions="Center">

                    <Label Text="{Binding ToValue, StringFormat='{0:0.##}'}"
                   TextColor="White"
                   FontSize="72"
                   FontFamily="century gothic"
                   Margin="0,20,0,0"
                   HorizontalTextAlignment="Center"/>

                    <Picker
                        TextColor="White"
                        TitleColor="White"
                        BackgroundColor="#40FFFFFF"
                        WidthRequest="320"
                        Margin="0, 10, 0, 10"
                        HorizontalOptions="Center"
                        ItemsSource="{Binding ToMeasures}"
                        SelectedItem="{Binding CurrentToMeasure}"
                        SelectedIndexChanged="Picker_SelectedIndexChanged"/>

                </VerticalStackLayout>
            </Border>


        </VerticalStackLayout>
    </Grid>
</ContentPage>